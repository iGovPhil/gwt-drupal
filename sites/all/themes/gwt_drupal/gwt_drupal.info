settings[gwt_drupal_breadcrumb_trailing]  = 0
settings[gwt_drupal_breadcrumb_title]     = 0
settings[gwt_drupal_skip_link_anchor]     = main-menu
settings[gwt_drupal_skip_link_text]       = Jump to navigation
settings[gwt_drupal_html5_respond_meta][] = respond
settings[gwt_drupal_html5_respond_meta][] = html5
settings[gwt_drupal_html5_respond_meta][] = meta
settings[gwt_drupal_rebuild_registry]     = 1
settings[gwt_drupal_wireframes]           = 0

